{
  "tasks": {
    "dev": "deno run --watch main.ts",
    "check": "deno fmt --check && deno lint && deno check **/*.ts",
    "format": "deno fmt"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1"
  },
  "lint": {
    "include": ["**/*.ts"],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "lineWidth": 120,
    "include": ["**/*.ts"]
  }
}
